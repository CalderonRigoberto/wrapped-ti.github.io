---
interface Props {
  project: {
    id: number;
    name: string;
    description: string;
    category: string;
    month: string;
    metrics: {
      usersImpacted?: number;
      timeSavedHours?: number;
      efficiency?: number;
      satisfaction?: number;
      downloads?: number;
      dailyActiveUsers?: number;
      serversOptimized?: number;
      costReduction?: number;
      performanceBoost?: number;
      downtime?: number;
      reportsAutomated?: number;
      decisionTime?: number;
      dataPoints?: number;
      processesAutomated?: number;
      errorReduction?: number;
      roi?: number;
    };
    technologies: string[];
    gradient: string;
    highlight?: boolean;
  };
  index: number;
}

const { project, index } = Astro.props;

const gradientClass = `gradient-${project.gradient}`;

// Get main metric to display
const getMainMetric = () => {
  const m = project.metrics;
  if (m.usersImpacted) return { value: m.usersImpacted, label: 'usuarios impactados', suffix: '' };
  if (m.timeSavedHours) return { value: m.timeSavedHours, label: 'horas ahorradas', suffix: '' };
  if (m.costReduction) return { value: m.costReduction, label: 'reducci√≥n de costos', suffix: '%' };
  if (m.processesAutomated) return { value: m.processesAutomated, label: 'procesos automatizados', suffix: '' };
  return { value: 0, label: '', suffix: '' };
};

const mainMetric = getMainMetric();
---

<article class={`project-card ${gradientClass}`}>
  <div class="card-header">
    <span class="card-number">#{String(index + 1).padStart(2, '0')}</span>
    <span class="card-category">{project.category}</span>
  </div>
  
  <div class="card-content">
    <span class="card-month">{project.month}</span>
    <h3 class="card-title">{project.name}</h3>
    <p class="card-description">{project.description}</p>
  </div>
  
  <div class="card-metric">
    <span class="metric-value">{mainMetric.value.toLocaleString('es-ES')}{mainMetric.suffix}</span>
    <span class="metric-label">{mainMetric.label}</span>
  </div>
  
  <div class="card-tech">
    {project.technologies.map((tech) => (
      <span class="tech-tag">{tech}</span>
    ))}
  </div>
  
  <div class="card-glow"></div>
</article>

<style define:vars={{ 
  gradientStart: `var(--color-${Astro.props.project.gradient})`,
}}>
  .project-card {
    position: relative;
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    overflow: hidden;
    transition: transform 0.4s var(--ease-out-expo),
                box-shadow 0.4s var(--ease-out-expo);
  }
  
  .project-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.3);
  }
  
  .project-card:hover .card-glow {
    opacity: 0.15;
  }
  
  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 150px;
    background: linear-gradient(180deg, var(--gradientStart) 0%, transparent 100%);
    opacity: 0.08;
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: 0;
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 1;
  }
  
  .card-number {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 700;
    color: var(--gradientStart);
  }
  
  .card-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    background: rgba(255, 255, 255, 0.05);
    padding: 0.375rem 0.75rem;
    border-radius: 100px;
  }
  
  .card-content {
    position: relative;
    z-index: 1;
  }
  
  .card-month {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--gradientStart);
    margin-bottom: 0.5rem;
  }
  
  .card-title {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-text-primary);
  }
  
  .card-description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  .card-metric {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 16px;
    padding: 1.25rem;
    text-align: center;
    position: relative;
    z-index: 1;
  }
  
  .metric-value {
    display: block;
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--gradientStart);
    line-height: 1.2;
  }
  
  .metric-label {
    display: block;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.25rem;
  }
  
  .card-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    position: relative;
    z-index: 1;
  }
  
  .tech-tag {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.375rem 0.75rem;
    border-radius: 100px;
    transition: all 0.2s ease;
  }
  
  .tech-tag:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-text-primary);
  }
  
  /* Gradient variations */
  .gradient-magenta {
    --gradientStart: var(--color-magenta);
  }
  
  .gradient-cyan {
    --gradientStart: var(--color-cyan);
  }
  
  .gradient-purple {
    --gradientStart: var(--color-purple);
  }
  
  .gradient-orange {
    --gradientStart: var(--color-orange);
  }
  
  .gradient-green {
    --gradientStart: var(--color-green);
  }
  
  @media (max-width: 768px) {
    .project-card {
      padding: 1.5rem;
    }
    
    .card-title {
      font-size: 1.25rem;
    }
    
    .metric-value {
      font-size: 2rem;
    }
  }
</style>

