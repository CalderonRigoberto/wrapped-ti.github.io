---
const baseUrl = import.meta.env.BASE_URL;
const logoPath = `${baseUrl}images/vise-logo-60.png`;
---

<header class="site-header" id="site-header">
  <div class="header-container">
    <a href="#hero" class="header-logo-link" aria-label="Ir al inicio">
      <img src={logoPath} alt="VISE Logo" class="header-logo" loading="eager" />
    </a>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 1000;
    background: rgba(10, 10, 10, 0.7);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition:
      transform 0.4s var(--ease-out-expo),
      background 0.3s var(--ease-out-expo),
      box-shadow 0.3s var(--ease-out-expo);
    transform: translateY(0);
  }

  .site-header.scrolled {
    background: rgba(10, 10, 10, 0.9);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .site-header.hidden {
    transform: translateY(-100%);
  }

  .header-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 1rem var(--container-padding);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: transform 0.3s var(--ease-out-expo);
  }

  .header-logo-link:hover {
    transform: scale(1.15);
  }

  .header-logo {
    height: 64px;
    width: auto;
    object-fit: contain;
    filter: brightness(1);
    transition: filter 0.3s ease;
  }

  .header-logo-link:hover .header-logo {
    filter: brightness(1.1);
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 0.75rem var(--container-padding);
    }

    .header-logo {
      height: 64px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const header = document.getElementById("site-header");

    if (header) {
      let lastScroll = window.scrollY;
      let ticking = false;

      const handleScroll = () => {
        const currentScroll = window.scrollY;

        // Add scrolled class for styling
        if (currentScroll > 50) {
          header.classList.add("scrolled");
        } else {
          header.classList.remove("scrolled");
        }

        // Hide/show header based on scroll direction
        if (currentScroll > 100) {
          // Only hide/show after passing hero section
          if (currentScroll > lastScroll) {
            // Scrolling down - hide header
            header.classList.add("hidden");
          } else {
            // Scrolling up - show header
            header.classList.remove("hidden");
          }
        } else {
          // Always show in hero section
          header.classList.remove("hidden");
        }

        lastScroll = currentScroll;
        ticking = false;
      };

      const onScroll = () => {
        if (!ticking) {
          window.requestAnimationFrame(handleScroll);
          ticking = true;
        }
      };

      window.addEventListener("scroll", onScroll, { passive: true });
      handleScroll(); // Check initial state
    }
  });
</script>
