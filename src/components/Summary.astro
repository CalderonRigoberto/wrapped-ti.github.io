---
import data from "../data/projects.json";

const { summary } = data;
---

<section class="summary" id="summary">
  <!-- SVG Gradient Definitions -->
  <svg width="0" height="0" style="position: absolute;">
    <defs>
      <linearGradient id="gradient-cyan" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#00f5d4"></stop>
        <stop offset="100%" style="stop-color:#00bbf9"></stop>
      </linearGradient>
      <linearGradient id="gradient-purple" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#9b5de5"></stop>
        <stop offset="100%" style="stop-color:#f15bb5"></stop>
      </linearGradient>
      <linearGradient id="gradient-orange" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#fee440"></stop>
        <stop offset="100%" style="stop-color:#f77f00"></stop>
      </linearGradient>
      <linearGradient id="gradient-green" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#00f5d4"></stop>
        <stop offset="100%" style="stop-color:#7bf1a8"></stop>
      </linearGradient>
      <linearGradient id="gradient-pink" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#f15bb5"></stop>
        <stop offset="100%" style="stop-color:#ff6b6b"></stop>
      </linearGradient>
      <linearGradient id="gradient-blue" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#00bbf9"></stop>
        <stop offset="100%" style="stop-color:#9b5de5"></stop>
      </linearGradient>
    </defs>
  </svg>

  <div class="summary-bg">
    <div class="gradient-blob cyan blob-summary"></div>
  </div>

  <div class="container">
    <div class="summary-header">
      <span class="section-label fade-in">RESUMEN DEL AÑO</span>
      <h2 class="summary-title fade-in stagger-1">
        Un año de <span class="text-gradient-cyan">transformación</span>
      </h2>
      <p class="summary-subtitle fade-in stagger-2">
        Estos son los números que definieron nuestro impacto en {data.year}
      </p>
    </div>

    <div class="stats-grid">
      <div class="stat-card glass-card fade-in stagger-1 card-cyan">
        <div class="stat-icon icon-cyan">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="url(#gradient-cyan)"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"
            ></path>
            <path
              d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"
            ></path>
            <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"></path>
            <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"></path>
          </svg>
        </div>
        <div class="stat-value-wrapper">
          <div class="stat-value" data-target={summary.deploymentsCount}>0</div>
        </div>
        <div class="stat-label">Despliegues</div>
      </div>

      <div class="stat-card glass-card fade-in stagger-2 card-purple">
        <div class="stat-icon icon-purple">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="url(#gradient-purple)"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
        </div>
        <div class="stat-value-wrapper">
          <div class="stat-value" data-target={summary.hoursInvested}>0</div>
        </div>
        <div class="stat-label">Horas Invertidas</div>
      </div>

      <div class="stat-card glass-card fade-in stagger-3 card-orange">
        <div class="stat-icon icon-orange">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="url(#gradient-orange)"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          </svg>
        </div>
        <div class="stat-value-wrapper">
          <div class="stat-value" data-target={summary.teamMembers}>0</div>
        </div>
        <div class="stat-label">Miembros del Equipo</div>
      </div>

      <div class="stat-card glass-card fade-in stagger-4 card-green">
        <div class="stat-icon icon-green">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="url(#gradient-green)"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect width="20" height="8" x="2" y="2" rx="2" ry="2"></rect>
            <rect width="20" height="8" x="2" y="14" rx="2" ry="2"></rect>
            <line x1="6" x2="6.01" y1="6" y2="6"></line>
            <line x1="6" x2="6.01" y1="18" y2="18"></line>
          </svg>
        </div>
        <div class="stat-value-wrapper">
          <div
            class="stat-value stat-percentage"
            data-target={summary.availability.toFixed(2)}
          >
            0
          </div>
        </div>
        <div class="stat-label">Disponibilidad de Infraestructura</div>
      </div>

      <div class="stat-card glass-card fade-in stagger-5 card-blue">
        <div class="stat-icon icon-blue">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="url(#gradient-blue)"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="2" x2="22" y1="12" y2="12"></line>
            <path
              d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
            ></path>
          </svg>
        </div>
        <div class="stat-value-wrapper">
          <div
            class="stat-value stat-percentage"
            data-target={summary.uptime.toFixed(2)}
          >
            0
          </div>
        </div>
        <div class="stat-label">VISE en Línea</div>
      </div>

      <div class="stat-card glass-card fade-in stagger-6 card-pink">
        <div class="stat-icon icon-pink">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="url(#gradient-pink)"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"
            ></path>
          </svg>
        </div>
        <div class="stat-value-wrapper">
          <div
            class="stat-value stat-percentage"
            data-target={summary.clientSatisfaction.toFixed(2)}
          >
            0
          </div>
        </div>
        <div class="stat-label">Satisfacción del Cliente</div>
      </div>
    </div>

    <div class="budget-section fade-in">
      <div class="budget-card glass-card">
        <div class="budget-item">
          <div class="budget-label">
            <span>Presupuesto autorizado</span>
            <span class="budget-value">$7,920,000.00</span>
          </div>
          <div class="progress-bar">
            <div class="progress-fill" data-progress="100"></div>
          </div>
        </div>

        <div class="budget-item">
          <div class="budget-label">
            <span>Presupuesto ejercido</span>
            <span class="budget-value">$7,605,273.90</span>
          </div>
          <div class="progress-bar">
            <div class="progress-fill" data-progress="96"></div>
          </div>
        </div>

        <div class="budget-item">
          <div class="budget-label">
            <span>Presupuesto no ejercido</span>
            <span class="budget-value">$314,726.10</span>
          </div>
          <div class="progress-bar">
            <div class="progress-fill small" data-progress="4"></div>
          </div>
        </div>

        <div class="budget-percentage">
          <span class="percentage-number">96%</span>
          <span class="percentage-label"
            >Porcentaje de presupuesto ejercido anualmente</span
          >
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .summary {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    background: var(--color-bg-section);
    overflow: hidden;
    padding: var(--section-padding) 0;
  }

  .summary-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .blob-summary {
    width: 500px;
    height: 500px;
    top: 50%;
    right: -150px;
    transform: translateY(-50%);
    opacity: 0.3;
  }

  .summary-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .section-label {
    display: inline-block;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--color-cyan);
    margin-bottom: 1rem;
  }

  .summary-title {
    font-size: clamp(2rem, 5vw, 4rem);
    margin-bottom: 1rem;
  }

  .summary-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 500px;
    margin: 0 auto;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    position: relative;
    z-index: 1;
  }

  .stat-card {
    text-align: center;
    padding: 2.5rem 2rem;
    transition:
      transform 0.3s var(--ease-out-expo),
      box-shadow 0.3s var(--ease-out-expo);
    overflow: hidden;
  }

  .stat-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 245, 212, 0.1);
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 1rem;
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
  }

  .stat-icon svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 0 8px currentColor);
  }

  .stat-card:hover .stat-icon {
    transform: scale(1.1);
  }

  /* Icon color variants with glow */
  .icon-cyan svg {
    filter: drop-shadow(0 0 10px rgba(0, 245, 212, 0.5));
  }
  .stat-card:hover .icon-cyan svg {
    filter: drop-shadow(0 0 16px rgba(0, 245, 212, 0.7));
  }

  .icon-purple svg {
    filter: drop-shadow(0 0 10px rgba(155, 93, 229, 0.5));
  }
  .stat-card:hover .icon-purple svg {
    filter: drop-shadow(0 0 16px rgba(155, 93, 229, 0.7));
  }

  .icon-orange svg {
    filter: drop-shadow(0 0 10px rgba(247, 127, 0, 0.5));
  }
  .stat-card:hover .icon-orange svg {
    filter: drop-shadow(0 0 16px rgba(247, 127, 0, 0.7));
  }

  .icon-green svg {
    filter: drop-shadow(0 0 10px rgba(123, 241, 168, 0.5));
  }
  .stat-card:hover .icon-green svg {
    filter: drop-shadow(0 0 16px rgba(123, 241, 168, 0.7));
  }

  .icon-blue svg {
    filter: drop-shadow(0 0 10px rgba(0, 187, 249, 0.5));
  }
  .stat-card:hover .icon-blue svg {
    filter: drop-shadow(0 0 16px rgba(0, 187, 249, 0.7));
  }

  .icon-pink svg {
    filter: drop-shadow(0 0 10px rgba(241, 91, 181, 0.5));
  }
  .stat-card:hover .icon-pink svg {
    filter: drop-shadow(0 0 16px rgba(241, 91, 181, 0.7));
  }

  .stat-value-wrapper {
    width: 100%;
    min-height: 3.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.5rem;
    position: relative;
  }

  .stat-value {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 3.5vw, 2.5rem);
    font-weight: 700;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
    text-align: center;
    white-space: nowrap;
    max-width: 100%;
    display: block;
    width: 100%;
    will-change: contents;
    transition: font-size 0.1s ease;
  }

  /* Stat value color variants matching icons */
  .card-cyan .stat-value {
    background: linear-gradient(135deg, #00f5d4, #00bbf9);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .card-purple .stat-value {
    background: linear-gradient(135deg, #9b5de5, #f15bb5);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .card-orange .stat-value {
    background: linear-gradient(135deg, #fee440, #f77f00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .card-green .stat-value {
    background: linear-gradient(135deg, #00f5d4, #7bf1a8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .card-blue .stat-value {
    background: linear-gradient(135deg, #00bbf9, #9b5de5);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .card-pink .stat-value {
    background: linear-gradient(135deg, #f15bb5, #ff6b6b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Ajustar tamaño de fuente para números muy grandes */
  .stat-value[data-target="287500"],
  .stat-value[data-target="15840"] {
    font-size: clamp(1.2rem, 2.8vw, 1.8rem);
  }

  .stat-percentage {
    font-size: clamp(1.4rem, 3vw, 2.2rem);
  }

  .stat-label {
    font-size: 1rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .stat-card {
      padding: 1.5rem 1rem;
    }

    .stat-icon {
      width: 40px;
      height: 40px;
    }

    .stat-value {
      font-size: clamp(1.25rem, 3.5vw, 2rem);
    }

    .stat-value-wrapper {
      min-height: 3rem;
    }
  }

  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }

    .stat-value {
      font-size: clamp(1.1rem, 4vw, 1.75rem);
    }

    .stat-percentage {
      font-size: clamp(1.1rem, 3.5vw, 1.5rem);
    }

    .stat-value-wrapper {
      min-height: 2.5rem;
    }
  }

  /* Budget Section Styles */
  .budget-section {
    position: relative;
    z-index: 1;
    margin-top: 4rem;
    text-align: center;
  }

  .budget-title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    margin-bottom: 2rem;
    color: var(--color-text-primary);
  }

  .budget-card {
    padding: 2.5rem;
    background: linear-gradient(
      135deg,
      rgba(0, 245, 212, 0.1) 0%,
      rgba(0, 187, 249, 0.1) 100%
    );
    border: 1px solid rgba(0, 245, 212, 0.2);
    text-align: left;
  }

  .budget-item {
    margin-bottom: 1.75rem;
  }

  .budget-item:last-of-type {
    margin-bottom: 2.5rem;
  }

  .budget-label {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .budget-label span:first-child {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text-primary);
  }

  .budget-value {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-secondary);
  }

  .progress-bar {
    height: 14px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    overflow: hidden;
    position: relative;
  }

  .progress-fill {
    height: 100%;
    border-radius: 50px;
    background: var(--gradient-cyan);
    width: 0%;
    transition: width 1.5s var(--ease-out-expo);
  }

  .progress-fill.small {
    background: rgba(255, 255, 255, 0.3);
  }

  .budget-percentage {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .percentage-number {
    display: block;
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 700;
    color: #00f5d4;
    line-height: 1.2;
    margin-bottom: 0.5rem;
    text-shadow:
      0 1px 0 #00d4b8,
      0 2px 0 #00b89c,
      0 3px 0 #009c80,
      0 4px 0 #008064,
      0 5px 0 #006448,
      0 6px 10px rgba(0, 0, 0, 0.4),
      0 6px 20px rgba(0, 245, 212, 0.3);
  }

  .percentage-label {
    font-size: 1rem;
    color: var(--color-text-secondary);
    font-style: italic;
  }

  @media (max-width: 768px) {
    .budget-card {
      padding: 1.5rem;
    }

    .budget-label {
      flex-direction: column;
      align-items: flex-start;
    }

    .budget-value {
      font-size: 0.875rem;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger } from "../scripts/gsap-init";

  document.addEventListener("DOMContentLoaded", () => {
    const statValues = document.querySelectorAll(".stat-value");

    statValues.forEach((el) => {
      const isPercentage = el.classList.contains("stat-percentage");
      const target = isPercentage
        ? parseFloat(el.getAttribute("data-target") || "0")
        : parseInt(el.getAttribute("data-target") || "0");

      ScrollTrigger.create({
        trigger: el,
        start: "top 80%",
        onEnter: () => {
          const duration = target > 1000 ? 2500 : 2000;
          animateValue(el as HTMLElement, target, duration, isPercentage);
        },
        once: true,
      });
    });

    // Animate budget progress bars
    const progressBars = document.querySelectorAll(".progress-fill");

    progressBars.forEach((bar) => {
      const progress = bar.getAttribute("data-progress") || "0";

      ScrollTrigger.create({
        trigger: bar,
        start: "top 85%",
        onEnter: () => {
          gsap.to(bar, {
            width: `${progress}%`,
            duration: 1.5,
            ease: "expo.out",
            delay: 0.2,
          });
        },
        once: true,
      });
    });
  });

  function animateValue(
    element: HTMLElement,
    target: number,
    duration: number,
    isPercentage: boolean
  ) {
    const startTime = performance.now();
    const wrapper = element.closest(".stat-value-wrapper") as HTMLElement;

    // Ajustar tamaño de fuente si el número es muy grande
    if (target > 10000) {
      element.style.fontSize = "clamp(1.2rem, 2.8vw, 1.8rem)";
    }

    const updateValue = (currentTime: number) => {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);

      // Ease out expo
      const easeProgress = 1 - Math.pow(2, -10 * progress);
      const current = isPercentage
        ? (target * easeProgress).toFixed(2) + "%"
        : Math.floor(target * easeProgress).toLocaleString("es-ES");

      element.textContent = current.toString();

      if (progress < 1) {
        requestAnimationFrame(updateValue);
      } else {
        element.textContent = isPercentage
          ? target.toFixed(2) + "%"
          : target.toLocaleString("es-ES");
      }
    };

    requestAnimationFrame(updateValue);
  }
</script>
