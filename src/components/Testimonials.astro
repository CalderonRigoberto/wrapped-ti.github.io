---
import TestimonialCard from "./TestimonialCard.astro";
import testimonialsData from "../data/testimonials.json";
import data from "../data/projects.json";

type Testimonial = {
  id: number;
  type: "video" | "text";
  projectId?: number;
  videoUrl?: string;
  rating?: number;
  comment: string;
  author: string;
  role: string;
  projectName?: string;
};

const testimonials = testimonialsData.testimonials;

// Enrich testimonials with project data if projectId exists
const enrichedTestimonials: Testimonial[] = testimonials.map((testimonial) => {
  const t = testimonial as Record<string, unknown>;
  const enriched: Testimonial = {
    id: testimonial.id,
    type: testimonial.type as "video" | "text",
    projectId: t.projectId as number | undefined,
    videoUrl: t.videoUrl as string | undefined,
    rating: testimonial.rating,
    comment: testimonial.comment,
    author: testimonial.author,
    role: testimonial.role,
    projectName: t.projectName as string | undefined,
  };

  if (t.projectId) {
    const project = data.projects.find((p) => p.id === t.projectId);
    enriched.projectName = project?.name || (t.projectName as string);
  }

  return enriched;
});

// Duplicate testimonials for seamless infinite scroll
const duplicatedTestimonials = [
  ...enrichedTestimonials,
  ...enrichedTestimonials,
];

// Calculate average rating
const ratingsWithValue = enrichedTestimonials.filter(
  (t) => t.rating !== undefined
);
const averageRating =
  ratingsWithValue.length > 0
    ? (
        ratingsWithValue.reduce((sum, t) => sum + (t.rating || 0), 0) /
        ratingsWithValue.length
      ).toFixed(1)
    : "5.0";

// Total tickets attended (this would come from your data, using a placeholder)
const totalTickets = 1247;
---

<section class="testimonials-section" id="testimonials">
  <div class="testimonials-bg">
    <div class="gradient-blob purple blob-testimonials-1"></div>
    <div class="gradient-blob cyan blob-testimonials-2"></div>
  </div>

  <div class="container">
    <div class="testimonials-header">
      <span class="section-label fade-in">TESTIMONIOS</span>
      <h2 class="testimonials-title fade-in stagger-1">
        Lo que dicen sobre <span class="text-gradient-purple">nosotros</span>
      </h2>
      <p class="testimonials-subtitle fade-in stagger-2">
        Testimonios reales de quienes han trabajado con nosotros en {data.year}
      </p>

      <div class="testimonials-metrics fade-in stagger-3">
        <div class="metric-item">
          <div class="metric-value">
            <svg class="metric-star" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"
              ></path>
            </svg>
            <span>{averageRating}</span>
          </div>
          <span class="metric-label">Calificaci√≥n promedio</span>
        </div>
        <div class="metric-divider"></div>
        <div class="metric-item">
          <div class="metric-value">
            <span class="tickets-count"
              >{totalTickets.toLocaleString("es-MX")}</span
            >
          </div>
          <span class="metric-label">Tickets atendidos</span>
        </div>
      </div>
    </div>
  </div>

  <div class="testimonials-marquee-wrapper">
    <div class="testimonials-marquee">
      <div class="testimonials-track-container">
        <div class="testimonials-track">
          {
            duplicatedTestimonials.map((testimonial, index) => (
              <TestimonialCard
                testimonial={testimonial}
                index={index % enrichedTestimonials.length}
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    min-height: 100vh;
    position: relative;
    background: var(--color-bg-dark);
    overflow: hidden;
    padding: var(--section-padding) 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .testimonials-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .blob-testimonials-1 {
    width: 500px;
    height: 500px;
    top: 15%;
    left: -150px;
    opacity: 0.2;
    animation: float 25s ease-in-out infinite;
  }

  .blob-testimonials-2 {
    width: 400px;
    height: 400px;
    bottom: 15%;
    right: -100px;
    opacity: 0.15;
    animation: float 30s ease-in-out infinite reverse;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(30px, -30px);
    }
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .section-label {
    display: inline-block;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--color-purple);
    margin-bottom: 1rem;
  }

  .testimonials-title {
    font-size: clamp(2rem, 5vw, 4rem);
    margin-bottom: 1rem;
  }

  .testimonials-metrics {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin-top: 2rem;
    padding: 1.25rem 2rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    backdrop-filter: blur(10px);
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
  }

  .metric-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .metric-value {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-primary);
  }

  .metric-star {
    width: 28px;
    height: 28px;
    color: #fbbf24;
    filter: drop-shadow(0 0 6px rgba(251, 191, 36, 0.5));
  }

  .tickets-count {
    background: var(--gradient-purple);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .metric-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .metric-divider {
    width: 1px;
    height: 50px;
    background: rgba(255, 255, 255, 0.1);
  }

  .testimonials-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 550px;
    margin: 0 auto;
  }

  .testimonials-marquee-wrapper {
    position: relative;
    width: 100%;
    overflow: visible;
    margin-top: 3rem;
    padding: 5rem 0 2rem 0;
  }

  .testimonials-marquee {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .testimonials-track-container {
    padding: 2rem 0;
    overflow: visible;
  }

  .testimonials-track {
    display: flex;
    gap: 2rem;
    width: fit-content;
    animation: marquee 60s linear infinite;
    will-change: transform;
  }

  .testimonials-marquee-wrapper:hover .testimonials-track {
    animation-play-state: paused;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Gradient fade edges */
  .testimonials-marquee-wrapper::before,
  .testimonials-marquee-wrapper::after {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    width: 150px;
    z-index: 2;
    pointer-events: none;
  }

  .testimonials-marquee-wrapper::before {
    left: 0;
    background: linear-gradient(to right, var(--color-bg-dark), transparent);
  }

  .testimonials-marquee-wrapper::after {
    right: 0;
    background: linear-gradient(to left, var(--color-bg-dark), transparent);
  }

  @media (max-width: 768px) {
    .testimonials-metrics {
      gap: 1.5rem;
      padding: 1rem 1.5rem;
    }

    .metric-value {
      font-size: 1.5rem;
    }

    .metric-star {
      width: 24px;
      height: 24px;
    }

    .metric-label {
      font-size: 0.75rem;
    }

    .metric-divider {
      height: 40px;
    }

    .testimonials-marquee-wrapper {
      padding: 4rem 0 1.5rem 0;
    }

    .testimonials-track-container {
      padding: 1.5rem 0;
    }

    .testimonials-track {
      gap: 1.5rem;
      animation-duration: 40s;
    }

    .testimonials-marquee-wrapper::before,
    .testimonials-marquee-wrapper::after {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .testimonials-track {
      animation: none;
    }

    .testimonials-marquee-wrapper {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .testimonials-marquee-wrapper::-webkit-scrollbar {
      display: none;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger } from "../scripts/gsap-init";

  document.addEventListener("DOMContentLoaded", () => {
    const header = document.querySelector(".testimonials-header");

    if (header) {
      gsap.fromTo(
        header,
        {
          opacity: 0,
          y: 40,
        },
        {
          opacity: 1,
          y: 0,
          duration: 1,
          ease: "power3.out",
          scrollTrigger: {
            trigger: header,
            start: "top 85%",
            toggleActions: "play none none none",
          },
        }
      );
    }
  });
</script>
