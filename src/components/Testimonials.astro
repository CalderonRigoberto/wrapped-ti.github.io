---
import TestimonialCard from "./TestimonialCard.astro";
import testimonialsData from "../data/testimonials.json";
import data from "../data/projects.json";

type Testimonial = {
  id: number;
  type: "video" | "text";
  projectId?: number;
  videoUrl?: string;
  rating?: number;
  comment: string;
  author: string;
  role: string;
  projectName?: string;
};

const testimonials = testimonialsData.testimonials;

// Enrich testimonials with project data if projectId exists
const enrichedTestimonials: Testimonial[] = testimonials.map((testimonial) => {
  const t = testimonial as Record<string, unknown>;
  const enriched: Testimonial = {
    id: testimonial.id,
    type: testimonial.type as "video" | "text",
    projectId: t.projectId as number | undefined,
    videoUrl: t.videoUrl as string | undefined,
    rating: testimonial.rating,
    comment: testimonial.comment,
    author: testimonial.author,
    role: testimonial.role,
    projectName: t.projectName as string | undefined,
  };

  if (t.projectId) {
    const project = data.projects.find((p) => p.id === t.projectId);
    enriched.projectName = project?.name || (t.projectName as string);
  }

  return enriched;
});

// Duplicate testimonials for seamless infinite scroll
const duplicatedTestimonials = [
  ...enrichedTestimonials,
  ...enrichedTestimonials,
];

const averageRating = 4.8;

// Total tickets attended (this would come from your data, using a placeholder)
const totalTickets = 1175;
---

<section class="testimonials-section" id="testimonials">
  <div class="testimonials-bg">
    <div class="gradient-blob purple blob-testimonials-1"></div>
    <div class="gradient-blob cyan blob-testimonials-2"></div>
  </div>

  <div class="container">
    <div class="testimonials-header">
      <span class="section-label fade-in">TESTIMONIOS</span>
      <h2 class="testimonials-title fade-in stagger-1">
        Lo que dicen sobre <span class="text-gradient-purple">nosotros</span>
      </h2>
      <p class="testimonials-subtitle fade-in stagger-2">
        Testimonios reales de quienes han trabajado con nosotros en {data.year}
      </p>

      <div class="testimonials-metrics fade-in stagger-3">
        <div class="rating-highlight">
          <div class="rating-stars">
            <svg class="star-icon" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"
              ></path>
            </svg>
            <svg class="star-icon" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"
              ></path>
            </svg>
            <svg class="star-icon" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"
              ></path>
            </svg>
            <svg class="star-icon" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"
              ></path>
            </svg>
            <svg class="star-icon" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"
              ></path>
            </svg>
          </div>
          <div class="rating-number shimmer-3d">{averageRating}</div>
          <span class="rating-label">Calificaci√≥n promedio</span>
        </div>
        <div class="tickets-info">
          <span class="tickets-count"
            >{totalTickets.toLocaleString("es-MX")}</span
          >
          <span class="tickets-label">tickets atendidos</span>
        </div>
      </div>
    </div>
  </div>

  <div class="testimonials-marquee-wrapper">
    <div class="testimonials-marquee">
      <div class="testimonials-track-container">
        <div class="testimonials-track">
          {
            duplicatedTestimonials.map((testimonial, index) => (
              <TestimonialCard
                testimonial={testimonial}
                index={index % enrichedTestimonials.length}
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    min-height: 100vh;
    position: relative;
    background: var(--color-bg-dark);
    overflow: hidden;
    padding: var(--section-padding) 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .testimonials-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .blob-testimonials-1 {
    width: 500px;
    height: 500px;
    top: 15%;
    left: -150px;
    opacity: 0.2;
    animation: float 25s ease-in-out infinite;
  }

  .blob-testimonials-2 {
    width: 400px;
    height: 400px;
    bottom: 15%;
    right: -100px;
    opacity: 0.15;
    animation: float 30s ease-in-out infinite reverse;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(30px, -30px);
    }
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .section-label {
    display: inline-block;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--color-purple);
    margin-bottom: 1rem;
  }

  .testimonials-title {
    font-size: clamp(2rem, 5vw, 4rem);
    margin-bottom: 1rem;
  }

  .testimonials-metrics {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 2.5rem;
  }

  .rating-highlight {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .rating-stars {
    display: flex;
    gap: 0.5rem;
  }

  .star-icon {
    width: 32px;
    height: 32px;
    color: #fbbf24;
    filter: drop-shadow(0 0 8px rgba(251, 191, 36, 0.6));
    animation: star-pulse 2s ease-in-out infinite;
  }

  .star-icon:nth-child(1) {
    animation-delay: 0s;
  }
  .star-icon:nth-child(2) {
    animation-delay: 0.1s;
  }
  .star-icon:nth-child(3) {
    animation-delay: 0.2s;
  }
  .star-icon:nth-child(4) {
    animation-delay: 0.3s;
  }
  .star-icon:nth-child(5) {
    animation-delay: 0.4s;
  }

  @keyframes star-pulse {
    0%,
    100% {
      transform: scale(1);
      filter: drop-shadow(0 0 8px rgba(251, 191, 36, 0.6));
    }
    50% {
      transform: scale(1.1);
      filter: drop-shadow(0 0 12px rgba(251, 191, 36, 0.8));
    }
  }

  .rating-number {
    font-family: var(--font-display);
    font-size: 4.5rem;
    font-weight: 700;
    line-height: 1;
    position: relative;
  }

  .shimmer-3d {
    background: linear-gradient(
      90deg,
      #fbbf24 0%,
      #fbbf24 35%,
      #ffffff 50%,
      #fbbf24 65%,
      #fbbf24 100%
    );
    background-size: 200% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer-gold 3s ease-in-out infinite;
    text-shadow: none;
    filter: drop-shadow(0 4px 0 rgba(180, 130, 0, 0.8))
      drop-shadow(0 8px 15px rgba(251, 191, 36, 0.4));
  }

  @keyframes shimmer-gold {
    0% {
      background-position: 100% 0;
    }
    100% {
      background-position: -100% 0;
    }
  }

  .rating-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .tickets-info {
    margin-top: 1rem;
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .tickets-count {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    background: var(--gradient-purple);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tickets-label {
    font-size: 1rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.02em;
  }

  .testimonials-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 550px;
    margin: 0 auto;
  }

  .testimonials-marquee-wrapper {
    position: relative;
    width: 100%;
    overflow: visible;
    margin-top: 3rem;
    padding: 5rem 0 2rem 0;
  }

  .testimonials-marquee {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .testimonials-track-container {
    padding: 2rem 0;
    overflow: visible;
  }

  .testimonials-track {
    display: flex;
    gap: 2rem;
    width: fit-content;
    animation: marquee 60s linear infinite;
    will-change: transform;
  }

  .testimonials-marquee-wrapper:hover .testimonials-track {
    animation-play-state: paused;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Gradient fade edges */
  .testimonials-marquee-wrapper::before,
  .testimonials-marquee-wrapper::after {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    width: 150px;
    z-index: 2;
    pointer-events: none;
  }

  .testimonials-marquee-wrapper::before {
    left: 0;
    background: linear-gradient(to right, var(--color-bg-dark), transparent);
  }

  .testimonials-marquee-wrapper::after {
    right: 0;
    background: linear-gradient(to left, var(--color-bg-dark), transparent);
  }

  @media (max-width: 768px) {
    .testimonials-metrics {
      gap: 0.75rem;
      margin-top: 2rem;
    }

    .star-icon {
      width: 26px;
      height: 26px;
    }

    .rating-number {
      font-size: 3.5rem;
    }

    .rating-label {
      font-size: 0.75rem;
    }

    .tickets-count {
      font-size: 1.25rem;
    }

    .tickets-label {
      font-size: 0.9rem;
    }

    .testimonials-marquee-wrapper {
      padding: 4rem 0 1.5rem 0;
    }

    .testimonials-track-container {
      padding: 1.5rem 0;
    }

    .testimonials-track {
      gap: 1.5rem;
      animation-duration: 40s;
    }

    .testimonials-marquee-wrapper::before,
    .testimonials-marquee-wrapper::after {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .testimonials-track {
      animation: none;
    }

    .testimonials-marquee-wrapper {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .testimonials-marquee-wrapper::-webkit-scrollbar {
      display: none;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger } from "../scripts/gsap-init";

  document.addEventListener("DOMContentLoaded", () => {
    const header = document.querySelector(".testimonials-header");

    if (header) {
      gsap.fromTo(
        header,
        {
          opacity: 0,
          y: 40,
        },
        {
          opacity: 1,
          y: 0,
          duration: 1,
          ease: "power3.out",
          scrollTrigger: {
            trigger: header,
            start: "top 85%",
            toggleActions: "play none none none",
          },
        }
      );
    }
  });
</script>
