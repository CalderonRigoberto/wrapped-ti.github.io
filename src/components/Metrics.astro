---
import data from '../data/projects.json';

const { achievements } = data;
---

<section class="metrics" id="metrics">
  <div class="metrics-bg">
    <div class="gradient-blob purple blob-metrics"></div>
  </div>
  
  <div class="container">
    <div class="metrics-header">
      <span class="section-label fade-in">LOGROS DESTACADOS</span>
      <h2 class="metrics-title fade-in stagger-1">
        Nuestros <span class="text-gradient-purple">mejores</span> momentos
      </h2>
    </div>
    
    <div class="achievements-grid">
      {achievements.map((achievement, index) => (
        <div class={`achievement-card glass-card scale-in stagger-${index + 1}`}>
          <span class="achievement-icon">{achievement.icon}</span>
          <h3 class="achievement-title">{achievement.title}</h3>
          <p class="achievement-value">{achievement.value}</p>
        </div>
      ))}
    </div>
    
    <div class="impact-section fade-in">
      <div class="impact-card glass-card">
        <h3 class="impact-title">Impacto Total</h3>
        <div class="impact-stats">
          <div class="impact-stat">
            <span class="impact-number" data-value="1200">0</span>
            <span class="impact-label">Empleados beneficiados</span>
          </div>
          <div class="impact-divider"></div>
          <div class="impact-stat">
            <span class="impact-number" data-value="7600">0</span>
            <span class="impact-label">Horas ahorradas</span>
          </div>
          <div class="impact-divider"></div>
          <div class="impact-stat">
            <span class="impact-number suffix-percent" data-value="340">0</span>
            <span class="impact-label">ROI promedio</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .metrics {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    background: var(--color-bg-section);
    overflow: hidden;
    padding: var(--section-padding) 0;
  }
  
  .metrics-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  
  .blob-metrics {
    width: 600px;
    height: 600px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.2;
    animation: pulse-slow 20s ease-in-out infinite;
  }
  
  @keyframes pulse-slow {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.2;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.3);
      opacity: 0.3;
    }
  }
  
  .metrics-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }
  
  .section-label {
    display: inline-block;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--color-purple);
    margin-bottom: 1rem;
  }
  
  .metrics-title {
    font-size: clamp(2rem, 5vw, 4rem);
  }
  
  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }
  
  .achievement-card {
    text-align: center;
    padding: 2.5rem 1.5rem;
    transition: transform 0.3s var(--ease-out-expo);
  }
  
  .achievement-card:hover {
    transform: translateY(-8px) scale(1.02);
  }
  
  .achievement-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 1rem;
  }
  
  .achievement-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
  }
  
  .achievement-value {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    background: var(--gradient-purple);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .impact-section {
    position: relative;
    z-index: 1;
  }
  
  .impact-card {
    padding: 3rem;
    text-align: center;
    background: linear-gradient(135deg, rgba(131, 56, 236, 0.1) 0%, rgba(58, 134, 255, 0.1) 100%);
    border: 1px solid rgba(131, 56, 236, 0.2);
  }
  
  .impact-title {
    font-size: 1.5rem;
    margin-bottom: 2.5rem;
    color: var(--color-text-primary);
  }
  
  .impact-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    flex-wrap: wrap;
  }
  
  .impact-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }
  
  .impact-number {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    background: var(--gradient-purple);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }
  
  .impact-number.suffix-percent::after {
    content: '%';
  }
  
  .impact-label {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
  }
  
  .impact-divider {
    width: 1px;
    height: 60px;
    background: linear-gradient(180deg, transparent 0%, rgba(131, 56, 236, 0.5) 50%, transparent 100%);
  }
  
  @media (max-width: 768px) {
    .impact-stats {
      flex-direction: column;
      gap: 2rem;
    }
    
    .impact-divider {
      width: 100px;
      height: 1px;
      background: linear-gradient(90deg, transparent 0%, rgba(131, 56, 236, 0.5) 50%, transparent 100%);
    }
    
    .achievement-card {
      padding: 2rem 1rem;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger } from '../scripts/gsap-init';
  
  document.addEventListener('DOMContentLoaded', () => {
    const impactNumbers = document.querySelectorAll('.impact-number');
    
    impactNumbers.forEach((el) => {
      const target = parseInt(el.getAttribute('data-value') || '0');
      
      ScrollTrigger.create({
        trigger: el,
        start: 'top 80%',
        onEnter: () => {
          animateNumber(el as HTMLElement, target);
        },
        once: true
      });
    });
  });
  
  function animateNumber(element: HTMLElement, target: number) {
    const duration = 2000;
    const startTime = performance.now();
    
    const update = (currentTime: number) => {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      const easeProgress = 1 - Math.pow(2, -10 * progress);
      const current = Math.floor(target * easeProgress);
      
      element.textContent = current.toLocaleString('es-ES');
      
      if (progress < 1) {
        requestAnimationFrame(update);
      } else {
        element.textContent = target.toLocaleString('es-ES');
      }
    };
    
    requestAnimationFrame(update);
  }
</script>

