---
const baseUrl = import.meta.env.BASE_URL;

const reviews = [
  {
    rating: 5,
    comment: "Muy práctica para consultar mi información",
    author: "Usuario VISE",
  },
  {
    rating: 5,
    comment: "Fácil de usar y rápida",
    author: "Colaborador",
  },
  {
    rating: 4,
    comment: "Excelente para registrar asistencia",
    author: "Empleado",
  },
];
---

<section class="mobile-app-section" id="mobile-app">
  <div class="mobile-app-bg">
    <div class="gradient-blob cyan blob-app-1"></div>
    <div class="gradient-blob purple blob-app-2"></div>
  </div>

  <div class="container mobile-app-content">
    <!-- Izquierda: Deck de teléfonos con perspectiva 3D -->
    <div class="phone-showcase">
      <div class="phones-deck">
        <!-- Teléfono 1 (principal) -->
        <div class="phone-mockup phone-primary">
          <div class="phone-frame">
            <div class="phone-screen">
              <img
                src={`${baseUrl}images/app-login-1.webp`}
                alt="VISE Móvil - Pantalla de inicio"
                class="screen-image"
                loading="lazy"
              />
            </div>
          </div>
          <div class="phone-shadow"></div>
        </div>

        <!-- Teléfono 2 (secundario) -->
        <div class="phone-mockup phone-secondary">
          <div class="phone-frame">
            <div class="phone-screen">
              <img
                src={`${baseUrl}images/app-main-2.webp`}
                alt="VISE Móvil - Pantalla secundaria"
                class="screen-image"
                loading="lazy"
              />
            </div>
          </div>
          <div class="phone-shadow"></div>
        </div>
      </div>
    </div>

    <!-- Derecha: Info + Descarga + Reviews -->
    <div class="app-info">
      <span class="section-label fade-in">APP MÓVIL</span>

      <h2 class="app-title fade-in stagger-1">
        <span class="text-gradient-cyan">VISE</span> Móvil
      </h2>

      <p class="app-description fade-in stagger-2">
        Todo lo que necesitas de VISE en la palma de tu mano.
      </p>

      <div class="app-features fade-in stagger-3">
        <div class="feature-item">
          <svg
            class="feature-icon"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
          <span>Registro de asistencia</span>
        </div>
        <div class="feature-item">
          <svg
            class="feature-icon"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
          <span>Consulta de recibos</span>
        </div>
        <div class="feature-item">
          <svg
            class="feature-icon"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
          <span>Notificaciones en tiempo real</span>
        </div>
        <div class="feature-item">
          <svg
            class="feature-icon"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
          <span>Mucho más...</span>
        </div>
      </div>

      <div class="download-buttons fade-in stagger-4">
        <a
          href="https://appmovil.vise.com.mx/"
          target="_blank"
          rel="noopener noreferrer"
          class="download-btn unified"
        >
          <svg
            class="store-icon"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
          <div class="btn-text">
            <span class="btn-label">Descarga la app</span>
            <span class="btn-store">VISE Móvil</span>
          </div>
        </a>
      </div>

      <div class="app-reviews fade-in stagger-5">
        <h4 class="reviews-title">Lo que dicen los usuarios</h4>
        <div class="reviews-marquee">
          <div class="reviews-track">
            {
              reviews.map((review, index) => (
                <div
                  class="review-card"
                  style={`--index: ${index}; --total: ${reviews.length}`}
                >
                  <div class="review-stars">
                    {[...Array(review.rating)].map(() => (
                      <svg class="star" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" />
                      </svg>
                    ))}
                  </div>
                  <p class="review-comment">"{review.comment}"</p>
                  <span class="review-author">- {review.author}</span>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .mobile-app-section {
    min-height: 100vh;
    position: relative;
    background: var(--color-bg-dark);
    overflow: hidden;
    padding: var(--section-padding) 0;
  }

  .mobile-app-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .blob-app-1 {
    width: 500px;
    height: 500px;
    top: 10%;
    left: -150px;
    opacity: 0.2;
    animation: float-blob 20s ease-in-out infinite;
  }

  .blob-app-2 {
    width: 400px;
    height: 400px;
    bottom: 10%;
    right: -100px;
    opacity: 0.15;
    animation: float-blob 25s ease-in-out infinite reverse;
  }

  @keyframes float-blob {
    0%,
    100% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(30px, -30px);
    }
  }

  .mobile-app-content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  /* ===== PHONE SHOWCASE ===== */
  .phone-showcase {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    min-height: 650px;
  }

  .phones-deck {
    position: relative;
    perspective: 1500px;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  .phone-mockup {
    position: absolute;
    transform-style: preserve-3d;
    will-change: transform, opacity;
  }

  /* Teléfono principal - inicia casi acostado (ángulo pronunciado) */
  .phone-primary {
    z-index: 2;
    transform: rotateX(65deg) rotateY(-10deg) rotateZ(0deg) scale(0.7);
    transform-origin: center bottom;
  }

  /* Teléfono secundario - inicia oculto detrás */
  .phone-secondary {
    z-index: 1;
    opacity: 0;
    transform: rotateX(65deg) rotateY(-10deg) rotateZ(0deg) scale(0.65);
    transform-origin: center bottom;
  }

  .phone-frame {
    position: relative;
    width: 260px;
    height: 540px;
    background: linear-gradient(145deg, #2a2a2a 0%, #1a1a1a 100%);
    border-radius: 44px;
    padding: 12px;
    box-shadow:
      inset 0 0 0 2px rgba(255, 255, 255, 0.1),
      0 0 0 1px rgba(0, 0, 0, 0.5),
      0 25px 50px -12px rgba(0, 0, 0, 0.5);
    overflow: hidden;
  }

  .phone-notch {
    position: absolute;
    top: 12px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 24px;
    background: #0a0a0a;
    border-radius: 0 0 14px 14px;
    z-index: 10;
  }

  .phone-notch::before {
    content: "";
    position: absolute;
    top: 7px;
    left: 50%;
    transform: translateX(-50%);
    width: 8px;
    height: 8px;
    background: #1a1a1a;
    border-radius: 50%;
    box-shadow: inset 0 0 2px rgba(0, 0, 0, 0.5);
  }

  .phone-screen {
    position: relative;
    width: 100%;
    height: 100%;
    background: #000;
    border-radius: 34px;
    overflow: hidden;
  }

  .screen-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
  }

  .phone-shadow {
    position: absolute;
    bottom: -50px;
    left: 50%;
    transform: translateX(-50%);
    width: 180px;
    height: 80px;
    background: radial-gradient(
      ellipse,
      rgba(0, 0, 0, 0.4) 0%,
      transparent 70%
    );
    filter: blur(15px);
    opacity: 0.8;
    transition: all 0.6s var(--ease-out-expo);
  }

  /* ===== APP INFO ===== */
  .app-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section-label {
    display: inline-block;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--color-cyan);
  }

  .app-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.1;
  }

  .app-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 500px;
    line-height: 1.7;
  }

  /* ===== FEATURES ===== */
  .app-features {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin: 0.5rem 0;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text-secondary);
    font-size: 1rem;
  }

  .feature-icon {
    width: 20px;
    height: 20px;
    color: var(--color-cyan);
    flex-shrink: 0;
  }

  /* ===== DOWNLOAD BUTTON ===== */
  .download-buttons {
    display: flex;
    margin-top: 1rem;
  }

  .download-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.25rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    text-decoration: none;
    color: var(--color-text-primary);
    transition: all 0.3s var(--ease-out-expo);
  }

  .download-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .store-icon {
    width: 28px;
    height: 28px;
  }

  .btn-text {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .btn-label {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .btn-store {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
  }

  /* ===== REVIEWS MARQUEE ===== */
  .app-reviews {
    margin-top: 1.5rem;
    max-width: 350px;
  }

  .reviews-title {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
  }

  .reviews-marquee {
    position: relative;
    overflow: visible;
    min-height: 160px;
  }

  .reviews-track {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .review-card {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    padding: 1rem;
    opacity: 0;
    transform: translateY(20px);
    animation: cycleReview 9s ease-in-out infinite;
    animation-delay: calc(var(--index) * 3s);
  }

  @keyframes cycleReview {
    0%,
    5% {
      opacity: 0;
      transform: translateY(20px);
    }
    10%,
    28% {
      opacity: 1;
      transform: translateY(0);
    }
    33%,
    100% {
      opacity: 0;
      transform: translateY(-20px);
    }
  }

  .review-stars {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }

  .review-stars .star {
    width: 14px;
    height: 14px;
    color: #fbbf24;
  }

  .review-comment {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    font-style: italic;
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }

  .review-author {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 968px) {
    .mobile-app-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .phone-showcase {
      order: -1;
      min-height: 550px;
    }

    .phones-deck {
      transform: scale(0.9);
    }

    .app-info {
      align-items: center;
    }

    .app-features {
      align-items: center;
    }

    .download-buttons {
      justify-content: center;
      flex-wrap: wrap;
    }

    .app-reviews {
      max-width: 100%;
      width: 100%;
    }

    .reviews-marquee {
      max-width: 350px;
      margin: 0 auto;
    }
  }

  @media (max-width: 480px) {
    .phone-showcase {
      min-height: 480px;
    }

    .phones-deck {
      transform: scale(0.75);
    }

    .phone-frame {
      width: 240px;
      height: 500px;
      border-radius: 36px;
    }

    .phone-notch {
      width: 90px;
      height: 22px;
    }

    .phone-screen {
      border-radius: 28px;
    }

    .download-buttons {
      flex-direction: column;
      width: 100%;
      max-width: 280px;
    }

    .download-btn {
      justify-content: center;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger } from "../scripts/gsap-init";

  document.addEventListener("DOMContentLoaded", () => {
    const phonePrimary = document.querySelector(".phone-primary");
    const phoneSecondary = document.querySelector(".phone-secondary");
    const section = document.querySelector(".mobile-app-section");

    if (phonePrimary && phoneSecondary && section) {
      // Timeline principal - animación más rápida
      const tl = gsap.timeline({
        scrollTrigger: {
          trigger: section,
          start: "top 95%",
          end: "top 20%",
          scrub: 0.8,
        },
      });

      // Fase 1 (0-50%): Levantar y agrandar el primer teléfono (de acostado a vertical)
      tl.to(
        phonePrimary,
        {
          rotateX: 0,
          rotateY: 0,
          rotateZ: 0,
          scale: 1,
          duration: 1.2,
          ease: "power2.out",
        },
        0
      );

      // Fase 2 (40-70%): Aparecer segundo teléfono y levantarlo también
      tl.to(
        phoneSecondary,
        {
          opacity: 1,
          scale: 1,
          rotateX: 0,
          rotateY: 0,
          rotateZ: 0,
          duration: 0.8,
          ease: "power2.out",
        },
        0.4
      );

      // Fase 3 (60-100%): Separar como deck de cartas en direcciones opuestas
      tl.to(
        phonePrimary,
        {
          x: -100,
          rotateY: 12,
          rotateZ: -3,
          duration: 0.8,
          ease: "power2.inOut",
        },
        0.6
      );

      tl.to(
        phoneSecondary,
        {
          x: 100,
          rotateY: -12,
          rotateZ: 3,
          duration: 0.8,
          ease: "power2.inOut",
        },
        0.6
      );

      // Ajustar sombras durante la animación
      tl.to(
        ".phone-primary .phone-shadow",
        {
          x: -20,
          opacity: 0.7,
          scale: 1.1,
          duration: 0.8,
        },
        0.6
      );

      tl.to(
        ".phone-secondary .phone-shadow",
        {
          x: 20,
          opacity: 0.7,
          scale: 1.1,
          duration: 0.8,
        },
        0.6
      );
    }

    // Animación de entrada para los elementos de info
    const infoElements = document.querySelectorAll(".app-info .fade-in");
    if (infoElements.length > 0) {
      gsap.fromTo(
        infoElements,
        { opacity: 0, y: 30 },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          stagger: 0.1,
          ease: "power3.out",
          scrollTrigger: {
            trigger: ".app-info",
            start: "top 80%",
            toggleActions: "play none none none",
          },
        }
      );
    }
  });
</script>
